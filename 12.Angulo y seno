#include <iostream>   // para cout, cin
#include <iomanip>    // para fixed y setprecision
#include <cmath>      // para sin y cos

int main() {
    double angulo;  // 치ngulo en radianes

    std::cout << "Ingrese el 치ngulo en radianes: ";
    std::cin  >> angulo;

    double seno    = std::sin(angulo);
    double coseno  = std::cos(angulo);

    // Imprimir con 6 decimales (puedes ajustar)
    std::cout << std::fixed << std::setprecision(3);
    std::cout << "El seno del 치ngulo es: "   << seno   << '\n';
    std::cout << "El coseno del 치ngulo es: " << coseno << '\n';

    return 0;
}
    
